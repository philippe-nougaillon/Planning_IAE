<div class="pb-2 mt-4 mb-2 border-bottom">
  <%= link_to new_salle_path, class: 'btn text-primary float-end' do %>
    <%= fa_icon 'plus-circle' %> Ajouter
  <% end %>
  <h3><%= fa_icon 'chalkboard' %> Liste des salles</h3>
</div>

<div class='container-fluid'>
    <%= form_tag request.path, method: :get do %>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-2">
            <%= label_tag "Salle" %>    
              <%= select_tag :salle_id, 
                      options_from_collection_for_select(Salle.order(:nom), :id, :nom, params[:salle_id]), 
                        include_blank:true, onchange:'this.form.submit()', class:"form-control" %>
          </div>
        </div>
      </div>  
    <% end %>
</div>

<div class="table-responsive">
  <table class="table table-hover table-striped table-sm">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Nbr places</th>
        <th>Bloc</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tfoot>
      <tr>
        <th /><th /><th /><th />
      </tr>
    </tfoot>

    <tbody>
        <%= render @salles %>
    </tbody>
  </table>
</div>
<br>

