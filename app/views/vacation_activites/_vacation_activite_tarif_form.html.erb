<div class="nested-form-wrapper flex flex-wrap shadow py-4 mb-4" data-new-record="<%= f.object.new_record? %>">

  <div class="sm:w-4/5 px-4">
    <div class="form-control">
      <%= f.label :statut %>
      <%= f.number_field :statut, class: 'input input-bordered input-sm w-full' %>
    </div>
  </div>

  <div class="sm:w-4/5 px-4">
    <div class="form-control">
      <%= f.label :qté %>
      <%= f.number_field :qté, class: 'input input-bordered input-sm w-full' %>
    </div>
  </div>

  <div class="sm:w-4/5 px-4">
    <div class="form-control">
      <%= f.label :HETD %>
      <%= f.number_field :HETD, class: 'input input-bordered input-sm w-full' %>
    </div>
  </div>

  <div class="sm:w-1/5 px-4 self-end">
    <button type="button" data-action="nested-form#remove" class="btn btn-sm">[X]</button>
    <%= f.hidden_field :_destroy %>
  </div>
</div>