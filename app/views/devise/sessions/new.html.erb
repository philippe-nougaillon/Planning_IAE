<div class="flex flex-col justify-center items-center mb-12">
  <% unless request.variant.include?(:phone) %>
    <%= image_tag "Aikku_logo.png", style: "width: 100%; max-width: 250px;" %>
  <% end %>
  <div class="w-full mt-8" style="max-width: 500px">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="text-3xl text-center border-b mb-4 pb-4">
        <%= t('.sign_in') %>
      </h1>
      <div class="flex flex-wrap">
        <div class="relative flex-grow max-w-full flex-1">
          <div class="form-control">
            <%= f.label :email, label: "Email *" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "input input-bordered w-full mt-2" %>
          </div>

          <div class="form-control my-4">
            <%= f.label :password, label: "Mot de passe *" %>
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "input input-bordered w-full mt-2" %>
          </div>

          <%= f.submit t('.sign_in'), class: "btn btn-primary text-white w-full mt-2 mb-4 text-xl font-normal", 'data-turbo': false %>
          <div class="flex flex-wrap justify-between my-4 gap-2">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'hover:underline' %>
            <% end -%>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'hover:underline' %>
            <% end -%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>