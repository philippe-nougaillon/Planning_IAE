<div class="flex flex-col justify-center items-center mb-12">
  <% unless request.variant.include?(:phone) %>
    <%= image_tag "logo@2000.png", style: "width: 100%; max-width: 500px;" %>
  <% end %>
  <div class="border border-gray-900 rounded shadow p-6 w-full" style="max-width: 500px">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="text-4xl text-center border-b mb-4 pb-4">
        <%= t('.sign_in') %>
      </h1>
      <div class="flex flex-wrap">
        <div class="relative flex-grow max-w-full flex-1">
          <div class="form-control">
            <%= f.label :email, label: "Email *" %>
            <%= f.email_field :email, autofocus: true, required: true, class: "input input-bordered w-full mt-2" %>
          </div>

          <div class="form-control my-4">
            <%= f.label :password, label: "Mot de passe *" %>
            <%= f.password_field :password, autocomplete: "off", required: true, class: "input input-bordered w-full mt-2" %>
          </div>

          <div class="flex justify-between mt-4">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center gap-2 mb-4">
                <%= f.check_box :remember_me, class: 'toggle' %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'hover:underline' %>
            <% end -%>
          </div>
          <div data-turbo="false">
            <%= f.submit t('.sign_in'), class: "btn btn-primary text-white w-full mt-2 mb-4" %>
          </div>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'float-right hover:underline' %>
          <% end -%>
        </div>
      </div>
    <% end %>
  </div>
</div>