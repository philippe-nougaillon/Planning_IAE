<script>
  function updateHighlightColumn() {
    let date = new Date();

    // Obtenir l'heure Ã  Paris en utilisant le fuseau horaire 'Europe/Paris'
    const parisHour = date.toLocaleTimeString('fr-FR', { 
      timeZone: 'Europe/Paris', 
      hour: '2-digit', 
      minute: '2-digit', 
      hour12: false 
    }).split(':')[0];
    
    for (let i = 8; i <= 22; i++) {
      if (i == parisHour) {
        let elements = document.getElementsByClassName(`h-column-${i}`);
        let previous_elements = document.getElementsByClassName(`h-column-${i - 1}`);

        for(let j = 0; j < elements.length; j++){
          elements[j].classList.add('bg-amber-100', 'text-black', 'font-black');
          previous_elements[j].classList.remove('bg-amber-100', 'text-black', 'font-black');
        }
        break;
      }
    }
  }
  updateHighlightColumn()
  setInterval(function() {updateHighlightColumn()}, 2 * 60 * 1000);
</script>