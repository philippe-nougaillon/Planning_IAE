<div class="flex items-center justify-between border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl"><%= fa_icon 'graduation-cap' %> Évaluations</h1>
  <% if policy(Evaluation).new? %>
    <%= link_to new_evaluation_path, class: 'text-primary' do %>
      <%= fa_icon 'plus-circle' %> Évaluation
    <% end %>
  <% end %>
</div>

<div class="bs-container p-4 shadow mb-4">
  <%= form_tag request.path, method: :get do %>
    <div class="flex flex-wrap">
      <div class="sm:w-1/3 pr-4">
        <%= label_tag :search, "Matière/Examen" %>
        <%= text_field_tag :search, params[:search], include_blank:true, onchange:'this.form.submit()', class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="flex gap-4">
        <div class="flex-1">
          <%= label_tag :du, "Période du" %>
          <%= text_field_tag :du, params[:du], type: 'date', class: 'input input-bordered input-sm w-full' %>
        </div>
        <div class="flex-1">
          <%= label_tag :au %>
          <%= text_field_tag :au, params[:au], type: 'date', class: 'input input-bordered input-sm w-full' %>
        </div>
      </div>

      <% unless current_user.étudiant? %>
        <div class="sm:w-1/2">
          <%= label_tag :formation_id %>
          <%= select_tag :formation_id, 
                              options_from_collection_for_select(Formation.unscoped.all, :id, :nom, params[:formation_id]), 
                              class: 'slim-select', 
                              include_blank: true, 
                              onchange: 'this.form.submit()' %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="overflow-x-auto">
  <table class="table">
    <thead class="bg-slate-100 border">
      <tr>
        <% unless current_user.étudiant? %>
          <th>Évaluation</th>
        <% end %>
        <th>Note</th>
        <th>Examen</th>
        <th>Matière</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: "evaluation", collection: @evaluations %>
    </tbody>
  </table>
</div>