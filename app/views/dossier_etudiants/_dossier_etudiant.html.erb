<div id="<%= dom_id dossier_etudiant %>">
  <div class="flex flex-col items-start w-full">
    <div class="flex w-full">
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Nom :</strong>
        <%= dossier_etudiant.nom.upcase %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Prénom :</strong>
        <%= dossier_etudiant.prénom %>
      </p>
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Formation souhaitée :</strong>
        <%= dossier_etudiant.formation %>
      </p>
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">État :</strong>
        <span class="badge <%= dossier_etudiant.style %> text-white">
          <%= dossier_etudiant.workflow_state.humanize %>
        </span>
      </p>
    </div>

    <div class="flex w-full">
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Email :</strong>
        <span class="break-all"><%= dossier_etudiant.email %></span>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Adresse :</strong>
        <%= dossier_etudiant.adresse %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Téléphone fixe :</strong>
        <%= dossier_etudiant.téléphone_fixe %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Téléphone mobile :</strong>
        <%= dossier_etudiant.téléphone_mobile %>
      </p>
    </div>

    <div class="flex justify-around gap-4 w-full">
      <% if @dossier_etudiant.certification.previewable? %>
        <p class="my-5">
          <strong class="block font-medium mb-1">Certification :</strong>
          <%= link_to image_tag(@dossier_etudiant.certification.preview(resize_to_limit: [250, 250]), class: 'max-w-none shadow-xl'), @dossier_etudiant.certification %>
        </p>
      <% end %>
      <% if @dossier_etudiant.pièce_identité.previewable? %>
        <p class="my-5">
          <strong class="block font-medium mb-1">Pièce d'identité :</strong>
          <%= link_to image_tag(@dossier_etudiant.pièce_identité.preview(resize_to_limit: [250, 250]), class: 'max-w-none shadow-xl'), @dossier_etudiant.pièce_identité %>
        </p>
      <% end %>
      <% if @dossier_etudiant.lettre_de_motivation.previewable? %>
        <p class="my-5">
          <strong class="block font-medium mb-1">Lettre de motivation :</strong>
          <%= link_to image_tag(@dossier_etudiant.lettre_de_motivation.preview(resize_to_limit: [250, 250]), class: 'max-w-none shadow-xl'), @dossier_etudiant.lettre_de_motivation %>
        </p>
      <% end %>
      <% if @dossier_etudiant.cv.previewable? %>
        <p class="my-5">
          <strong class="block font-medium mb-1">CV :</strong>
          <%= link_to image_tag(@dossier_etudiant.cv.preview(resize_to_limit: [250, 250]), class: 'max-w-none shadow-xl'), @dossier_etudiant.cv %>
        </p>
      <% end %>
    </div>

    <p class="font-bold">Père</p>
    <div class="flex justify-between w-full">
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Nom :</strong>
        <%= dossier_etudiant.nom_père %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Prénom :</strong>
        <%= dossier_etudiant.prénom_père %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Profession :</strong>
        <%= dossier_etudiant.profession_père %>
      </p>
    </div>

    <p class="font-bold">Mère</p>
    <div class="flex justify-between w-full">
      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Nom :</strong>
        <%= dossier_etudiant.nom_mère %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Prénom :</strong>
        <%= dossier_etudiant.prénom_mère %>
      </p>

      <p class="flex-1 my-5">
        <strong class="block font-medium mb-1">Profession :</strong>
        <%= dossier_etudiant.profession_mère %>
      </p>
    </div>
  </div>

  <% if action_name != "show" %>
    <div class="mt-4">
      <%= link_to "Voir", dossier_etudiant, class: "btn" %>
      <%= link_to "Modifier", edit_dossier_etudiant_path(dossier_etudiant), class: "btn btn-primary btn-outline" %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
