<div class="flex items-center justify-between border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl flex items-center gap-3">
    <span class="material-symbols-outlined text-3xl">
      docs
    </span>
    Sujets d'examens
  </h1>
</div>

<div class="bs-container mx-auto sm:px-4 max-w-full p-4 shadow">
  <%= form_tag request.path, method: :get do %>
    <div class="flex flex-wrap">

      <div class="sm:w-2/6 px-4">
        <%= label_tag :formation %>   
        <%= select_tag :formation, grouped_options_for_select(Intervenant.formation_for_select(@intervenant_user_id), params[:formation]), class: 'slim-select',
                        include_blank:true, onchange: 'this.form.submit()' %>
      </div>

      <div class="sm:w-1/6 px-4">
        <%= label_tag :workflow_state, "État" %>
        <%= select_tag :workflow_state, 
                            options_for_select(Sujet.workflow_spec.states.keys.to_a, params[:workflow_state]), 
                            include_blank: true,
                            class: 'select select-bordered select-sm w-full', 
                            onchange: 'this.form.submit()' %>
      </div>

      <div class="sm:w-1/6 px-4 self-end">
        <div class="flex gap-1">
          <%= check_box_tag :archive, nil, params[:archive], onchange: 'this.form.submit()' %>
          <%= label_tag :archive, "Inclure les archivés ?", class: "whitespace-nowrap" %>
        </div>
      </div>

    </div>
  <% end %>
</div>

<div class="overflow-x-auto">
  <table class="table mb-4">
    <thead class="bg-slate-100 border">
      <tr>
        <th><%= sort_link 'sujets.updated_at', 'MÀJ' %></th>
        <th><%= sort_link 'cours.debut', 'Examen du' %></th>
        <th>Intervenant</th>
        <th><%= sort_link 'sujets.workflow_state', 'État' %></th>
        <th>Statut Mail</th>
        <th>État Mail</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @sujets %>
    </tbody>
  </table>
</div>

<div class="page_info">
  <%= page_entries_info @sujets %>
</div>

<div class="planning_pagination">
  <%= will_paginate @sujets %>
</div>