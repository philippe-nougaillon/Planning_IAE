<%= form_for(@agent) do |f| %>
  <%= render partial: 'partials/errors', locals: { record: @agent } %>

  <div class="flex flex-col gap-4">
    <div class="sm:w-4/12">
      <%= f.label :nom, 'Nom *' %>
      <%= f.text_field :nom, class: 'input input-bordered input-sm w-full', required: true %>
    </div>
    <div class="sm:w-4/12">
      <%= f.label :prénom, 'Prénom *' %>
      <%= f.text_field :prénom, class: 'input input-bordered input-sm w-full', required: true %>
    </div>

    <div class="sm:w-4/12">
      <%= f.label :Catégorie, 'Catégorie *' %>
      <%= f.select :catégorie,
        options_for_select(%w{A B C}, @agent.catégorie),
        {},
        class: 'select select-bordered select-sm w-full',
        required: true %>
    </div>

    <%= f.submit class: "btn btn-primary text-white sm:w-4/12", 'data-turbo': false %>
  </div>
<% end %>
