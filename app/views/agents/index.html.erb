<div class="flex items-center justify-between border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl"><%= fa_icon 'user-secret' %> Agents</h1>
  <% if policy(Agent).new? %>
    <%= link_to new_agent_path, class: 'text-primary' do %>
      <%= fa_icon 'plus-circle' %> Agent
    <% end %>
  <% end %>
</div>

<h2 class="text-xl mb-12">
  Liste des intervenants qui participent à la surveillance d'examens et qui ont un taux horaire spécifique
</h2>

<% if @agents.any? %>
  <div class="overflow-x-auto">
    <table class="table">
      <thead class="bg-slate-100 border">
        <tr>
          <th><%= sort_link 'agents.nom', 'Nom' %></th>
          <th><%= sort_link 'agents.prénom', 'Prénom' %></th>
          <th><%= sort_link 'agents.catégorie', 'Catégorie' %></th>
          <th><%= sort_link 'agents.created_at', 'Créé le' %></th>
          <th></th>
        </tr>
      </thead>

      <tfoot>
        <tr>
          <th colspan=5></th>
        </tr>
      </tfoot>

      <tbody>
        <%= render @agents %>
      </tbody>

    </table>
  </div>

  <div class="page_info">
    <%= page_entries_info @agents %>
  </div>

  <div class="planning_pagination">
    <%= will_paginate @agents %>
  </div>
<% end %>