<div class="pb-2 mt-4 mb-2 border-bottom">
  <% if policy(Agent).new? %>
    <%= link_to new_agent_path, class: 'btn text-primary float-end' do %>
      <%= fa_icon 'plus-circle' %> Agent
    <% end %>
  <% end %>
  <h3><%= fa_icon 'user-secret' %> Agents</h3>
</div>

<% if @agents.any? %>
  <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr>
          <th><%= sort_link 'agents.nom', 'Nom' %></th>
          <th><%= sort_link 'agents.prénom', 'Prénom' %></th>
          <th><%= sort_link 'agents.catégorie', 'Catégorie' %></th>
          <th><%= sort_link 'agents.created_at', 'Créé le' %></th>
          <th></th>
        </tr>
      </thead>

      <tfoot>
        <tr>
          <th colspan=5></th>
        </tr>
      </tfoot>

      <tbody>
        <%= render @agents %>
      </tbody>

    </table>

    <div class="page_info">
      <%= page_entries_info @agents %>
    </div>

    <%= will_paginate @agents, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

  </div>
<% end %>