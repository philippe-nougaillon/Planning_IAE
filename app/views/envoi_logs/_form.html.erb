<%= form_with(model: envoi_log, local: true) do |form| %>
  <% if envoi_log.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-3xl"><%= pluralize(envoi_log.errors.count, "error") %> empêche cet enregistrement d'être enregistré :</h2>

      <ul>
        <% envoi_log.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-wrap">
    <div class="sm:w-1/4">
      <div class="form-control">
        <%= form.label :date_prochain, "Date prévue" %>
        <%= form.text_field :date_prochain, type: :date, value: envoi_log.date_prochain.to_date, class: "input input-bordered input-sm w-full" %>
      </div>
    </div>
  </div>

  <div class="form-control mt-4">
    <%= form.label :message, "Message (apparaît en bas du corps du mail)" %>
    <%= form.text_field :message, class: "input input-bordered input-sm w-full" %>
  </div>
  
  <%= form.submit "Enregistrer", class: "btn btn-primary text-white mt-4", 'data-turbo': false %>
<% end %>
