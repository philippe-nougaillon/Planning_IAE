<div class="border-b mt-6 mb-2 pb-4">
  <div class="buttons-group float-right">
    <%= link_to justificatifs_path, class: 'btn btn-ghost' do %>
      <%= fa_icon 'list-alt', text: ' Retour' %>
    <% end %>
  </div>

  <h1 class="text-3xl">
    <%= image_tag 'edusign.png', size: 32, class: 'inline' %>
    Justificatif d'absence
  </h1>
</div>

<div class="bs-container card shadow p-4 my-4">
  <div class="flex flex-wrap">
    <div class="relative flex-grow max-w-full flex-1">
      <p class="mb-4">
        <strong>Créé il y a :</strong>
        <%= time_ago_in_words(@justificatif.edusign_created_at) %>
      </p>
      <p class="mb-4">
        <strong>Motif :</strong>
        <%= @justificatif.motif.nom.humanize %>
      </p>

      <p class="mb-4">
        <strong>Etudiant :</strong>
        <%= link_to @justificatif.etudiant.nom_prénom, @justificatif.etudiant, class: 'text-primary hover:underline' %>
      </p>

      <p class="mb-4">
        <strong>Commentaires :</strong>
        <%= @justificatif.commentaires %>
      </p>

      <p class="mb-4">
        <strong>Absence du :</strong>
        <%= l @justificatif.debut, format: :long  %>
      </p>

      <p class="mb-4">
        <strong>Au :</strong>
        <%= l @justificatif.fin, format: :long  %>
      </p>

      <p class="mb-4">
        <strong>Accepté le :</strong>
        <%= l @justificatif.edusign_created_at, format: :long  %>
      </p>

      <% if @justificatif.file_url.present? %>
        <p class="mb-4">
          <strong>Document justificatif :</strong>
          <%= link_to @justificatif.file_url, @justificatif.file_url, class: 'text-primary hover:underline' %>
        </p>
      <% end %>

    </div>
  </div>
</div>
