<div class="mx-auto md:w-2/3 w-full flex mt-24">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div style="background-color: <%= @note.couleur %>" class="min-w-72 min-h-72 py-4 px-8 shadow-xl">
      <p class="text-2xl font-black my-5">
        <%= @note.titre %>
      </p>

      <p class="my-5">
        <%= simple_format(@note.texte) %>
      </p>
    </div>

    <div class="mt-4">
      <%= link_to "Modifier", edit_note_path(@note), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= link_to "Supprimer", note_path(@note), 'data-turbo-method': :delete, 'data-turbo-confirm': 'Confirmez-vous ?', class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <%= link_to "Retour", notes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
