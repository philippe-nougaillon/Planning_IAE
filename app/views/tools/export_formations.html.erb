<div class="border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl"><%= fa_icon 'upload' %> Export des formations </h1>
</div>
<br>

<div>
  <h3 class="text-2xl">Cette fonction permet la création d'une feuille Excel contenant toutes les formations</h3>
</div>

<%= form_tag({action: "export_formations_do", method: :post}) do %>
  <div class="my-4">
    <%= check_box_tag :archive %>
    <%= label_tag :archive, "Inclure les formations archivées ?" %>
  </div>

  <%= submit_tag "Exporter", class: "btn btn-primary text-white", 'data-turbo': false %>
<% end %>