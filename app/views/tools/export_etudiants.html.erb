<script>
  $(document).ready(function() { $(".select2").select2({theme: "bootstrap"}); });
</script>

<div class="page-header">
  <h1>
  	<span class="glyphicon glyphicon-export"></span>
  	Export des étudiants 
  </h1>
</div>

<div>
  <h4>Permet la création d'une feuille Excel contenant tous les étudiants ou seulement ceux de la formation sélectionnée ci-dessous</h4>
</div>

<%= form_tag({action: "export_etudiants_do", method: :post}) do %>

  <div class="row">
    <div class="col-sm-4">
      <%= label_tag "Formation" %>    
      <%= select_tag :formation_id, 
            options_from_collection_for_select(Formation.all, :id, :nom, params[:formation_id]), 
              class:"form-control select2", include_blank: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-4">

        <div class="actions">
          <%= submit_tag "Exporter", class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
  
<% end %>