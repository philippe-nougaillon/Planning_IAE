<div class="border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl"><%= fa_icon 'upload' %> Export des étudiants </h1>
</div>
<br>

<div>
  <h4 class="text-xl">
      Permet la création d'une feuille Excel contenant tous les étudiants <br>
      ou seulement ceux de la formation sélectionnée ci-dessous
  </h4>
</div>
<br>

<%= form_tag({action: "export_etudiants_do", method: :post}) do %>

  <div class="flex flex-wrap">
    <div class="sm:w-1/3">
      <%= label_tag :formation_id %>    
      <%= select_tag :formation_id, 
            options_from_collection_for_select(Formation.not_archived.ordered, :id, :nom, params[:formation_id]), 
              class:"slim-select", include_blank: true %>
    </div>
  </div>
  <br>

  <div class="flex flex-wrap">
    <div class="sm:w-1/3">
      <%= submit_tag "Exporter", class: "btn btn-primary text-white", 'data-turbo': false %>
    </div>
  </div>

<% end %>