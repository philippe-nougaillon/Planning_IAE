<div class="flex-1 card shadow px-2 py-4 mb-6" style="border-left:6px; border-left-style:solid; border-left-color:<%= cour.formation.color %>;">
  <% if next_cours %>
    <p class="text-lg font-bold mb-4"><%= l(cour.debut.to_date, format: :long).humanize %></p>
  <% end %>
  <div class="flex mb-2">
    <div class="w-full">
      <div class="flex items-center gap-4 mb-4">
        <% if cour.salle %>
          <p class="mb-0">
            <span class="badge badge-<%= cour.style %> badge-lg text-white font-black">
              <%= cour.salle.nom %>
            </span>
          </p>
        <% end %>
        <p><b><%= l(cour.debut, format: :heures_min) %></b> - <%= l(cour.fin, format: :heures_min) %></p>
      </div>
      <p class="mb-4"><%= cour.intervenant.nom_prenom %></p>
      <p class="mb-0"><%= cour.nom_ou_ue %></p>
    </div>
    <% if cour.intervenant.photo.present? %>
      <%= image_tag cour.intervenant.photo, class:"max-w-24 object-scale-down" %>
    <% end %>
  </div>
  <% if cour.debut.to_date == Date.today %>
    <progress data-debut="<%= cour.debut.to_i %>" data-fin="<%= cour.fin.to_i %>" class="progress progress-secondary !h-2 mt-2" value="<%= cour.progress_bar_pct3 %>" max="100"></progress>
  <% end %>

