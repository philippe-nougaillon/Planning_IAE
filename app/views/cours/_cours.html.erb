<tr class="hover border">
    <% if policy(Cour).action? %>
        <td>
            <span class="flex" data-action="click->action#click">
                <%= check_box_tag "cours_id[#{cours.id}]", 'yes', false, data: {"action-target": "source", "checkbox-select-all-target": "checkbox"} %>
            </span>
        </td>
    <% end %>
    <td>
        <%= link_to cours, class: 'text-primary hover:underline' do %>
            <b><%= l(cours.debut, format: :heures_min) %></b> 
            <br>
            <%= l(cours.fin, format: :heures_min) %>
        <% end %>
    </td>
    <td>
        <%= number_with_precision(cours.duree, precision: 1, strip_insignificant_zeros: true) %> h
        <% if cours.debut.to_date == Date.today %>
            <progress data-debut="<%= cours.debut.to_i %>" data-fin="<%= cours.fin.to_i %>" class="progress progress-primary opacity-50 mt-1" value="<%= cours.progress_bar_pct3 %>" max="100"></progress>
        <% end %>
    </td>
    <td style="border-left: .3rem solid <%= cours.formation.positive_color %>">
        <% if policy(Cour).action? %>
            <%= link_to cours.formation.nom_nbr_etudiants, cours.formation, class: 'text-primary hover:underline' %>
        <% else %>
            <%= link_to cours.formation.nom, cours.formation, class: 'text-primary hover:underline' %>
        <% end %>
    </td>
    <td>
        <% if user_signed_in? %>
            <%= link_to cours.intervenant.nom_prenom, cours.intervenant, class: 'text-primary hover:underline' %>
            <% if binome = cours.intervenant_binome %>
                <br>
                <%= link_to binome.nom_prenom, cours.intervenant_binome, class: 'text-primary hover:underline' %>
            <% end %>
        <% end %>

        <% if user_signed_in? && current_user.admin? %>
            <% unless cours.invits.where.not("workflow_state = 'non_retenue' OR workflow_state = 'confirmée'").count.zero? %>
                <div class="flex items-start gap-1">
                    <span class="material-symbols-outlined text-base">
                        calendar_check
                    </span>
                    <%= link_to 'Invitations en cours', invits_path(cours_id: cours.id), class: 'text-primary hover:underline' %>
                </div>
            <% end %>
        <% end %>
    </td>
    <td>
        <% if cours.code_ue %>
            <%= link_to "##{ cours.code_ue }", cours_path(ue: cours.code_ue), class: 'text-primary hover:underline' %>
        <% end %>
    </td>
    <td>
        <% if user_signed_in? %>
            <%= cours.nom_ou_ue %>
        <% end %>
    </td>
    <td style="white-space: nowrap;">
        <% if cours.salle %>
            <h5 class="text-lg mb-2">
                <span class="badge badge-<%= cours.style %> text-white font-bold">
                    <%= cours.salle.nom %>
                </span>
            </h5>
            <% if user_signed_in? && !(current_user.étudiant?) %>
                <% if cours.manque_de_places? %>
                    <i title="Manque <%= cours.formation.nbr_etudiants - cours.salle.places %> place.s">
                        <%= fa_icon 'exclamation-circle', class: 'mt-2' %>
                    </i>
                <% end %>
            <% end %>
            <% if user_signed_in? && (current_user.gestionnaire? || current_user.admin?)  %>
                <% étudiants_présents = cours.presences.where.not(etudiant_id: nil).where(workflow_state: ['signée', 'validée']).count %>

                <% if étudiants_présents > 0 %>
                    <%= fa_icon 'file-signature' %>
                    <%= link_to presences_path(search: "cours:#{cours.id}"), title: 'présences signées / nbr étudiants', class: 'text-primary hover:underline' do %>
                        <%= étudiants_présents %> / <%= cours.etudiants.count %>
                    <% end %>
                <% end %>
            <% end %>
        <% else %>
            <% if cours.confirmé? %>
                <i title="Pas de salle réservée !">
                    <%= fa_icon 'exclamation-circle' %>
                </i>
            <% else %>
                <h5 class="text-lg">
                    <span class="badge badge-<%= cours.style %> text-white font-bold">
                        <%= cours.etat.humanize %>
                    </span>
                </h5>
            <% end %>
        <% end %>

        <% if (policy(cours).edit? || (current_user && current_user.accueil_vacataire?)) %>
            <% if cours.options.commande.any? %>
                <i title="<%= cours.options.commande.first.description %>" >
                    <%= link_to tools_commandes_v2_path do %>
                        <%= fa_icon 'coffee', class: 'text-error' %>
                    <% end %>
                </i>
            <% end %>
            <% if cours.options.surveillance.any? %>
                <i title="<%= cours.options.surveillance.first.description %>" >
                    <%= link_to tools_liste_surveillants_examens_v2_path(start_date: cours.debut.to_date, end_date: cours.debut.to_date) do %>
                        <%= fa_icon 'user-secret' %>
                    <% end %>
                </i>
            <% end %>
            <% if !cours.commentaires.blank? %>
                <i title="<%= cours.commentaires %>" >
                    <% if cours.commentaires.start_with?("+")  %>
                        <%= link_to tools_commandes_path do %>
                            <%= fa_icon 'mug-hot', class: 'text-amber-800' %>
                        <% end %>
                    <% else %>
                        <%= fa_icon 'comment-dots' %>
                    <% end %>
                </i>
            <% end %>
        <% end %>
        <% if current_user && current_user.role_number >= 1 && cours.document.attached? %>
            <%= link_to url_for(cours.document), title: cours.document.filename, target: "_blank" do %>
                <%= fa_icon 'file' %>
            <% end %>
        <% end %>
        <% if current_user && current_user.role_number >= 5 && !cours.edusign_id? %>
            <span title="Le cours n'est pas synchronisé avec Edusign" class="cursor-pointer">
                <span class="material-symbols-outlined text-sky-900 bg-orange-300 text-lg rounded-full h-4 w-4 flex items-center font-black">
                    error
                </span>
            </span>
        <% end %>
        <% if current_user && current_user.role_number >= 5 && cours.sujet_manquant? %>
            <% if sujet = Sujet.find_by(cour_id: cours.id) %>
                <%= link_to sujet_path(sujet) do %>
                    <span class="material-symbols-outlined text-xl text-<%= cours.color_sujet %> cursor-pointer" title="Le sujet de l'examen n'est pas encore envoyé">
                        docs
                    </span>
                <% end %>
            <% else %>
                <span class="material-symbols-outlined text-xl text-<%= cours.color_sujet %> cursor-pointer" title="Le sujet de l'examen n'est pas encore envoyé">
                    docs
                </span>
            <% end %>
        <% end %>
    </td>

    <% if policy(cours).edit? %>
        <td>
            <%= link_to edit_cour_path(cours, from: params[:from]), class: "btn btn-sm btn-ghost text-base-content" do %>
                <%= fa_icon 'edit '%>
            <% end %>
        </td>
    <% end %>
</tr>
