<% if @alert %>
  <%= content_tag :div, 
      class: "chat chat-start my-4",
      role: "alert" do %>
    <div class="chat-bubble chat-bubble-<%= @alert.etat %> text-white">
      <%= @alert.message %>
    </div>
  <% end %>
<% end %>
<%= form_tag request.path, method: :get do %>
  <div class="flex flex-col gap-2">
    <div>
      <%= label_tag :start_date_mobile, "Cours à partir du" %>
      <%= text_field_tag :start_date_mobile, params[:start_date_mobile], type: 'datetime-local', onchange: 'this.form.submit()', class: "input input-bordered input-sm w-full" %>
    </div>
    
    <div>
      <%= label_tag :formation %>    
      <%= select_tag :formation, options_for_select(@formations, params[:formation]), 
                      class: "slim-select",
                      include_blank: true, onchange: 'this.form.submit()' %>
    </div>

    <% if user_signed_in? %>
      <div>
        <%= label_tag :intervenant %>
        <%= select_tag :intervenant, grouped_options_for_select(Intervenant.for_select, params[:intervenant]), 
                          class: "slim-select",
                          include_blank: true,
                          onchange:'this.form.submit()' %>
      </div>
    <% end %>
  </div>
<% end %>

<% current_date = '' %>
<% @cours.each do | cours | %>
  <% _date_cours = cours.debut.to_date %>
  <% if _date_cours != current_date %>
    <div class="flex items-center gap-1 bg-slate-100 mt-4 py-2 pl-4">
      <span class="material-symbols-outlined text-lg mb-0.5">
        today
      </span>
      <b><%= l(_date_cours, format: :long).humanize %></b>
    </div>
    <% current_date = _date_cours %>
  <% end %>  

  <%= render partial: 'cours', locals: { cours: cours } %>

<% end %>
<br>

<% if @cours.length > 0 %>
  <div class="planning_pagination w-full justify-center mb-6">
    <%= will_paginate @cours, inner_window: 0, 
                              outer_window: 0, 
                              class: 'pagination' %>
  </div>
<% else %>
  <p class="mb-4">
    Aucun cours à afficher...
  </p>
<% end %>

<%= render partial: 'partials/script_progress_bar' %>