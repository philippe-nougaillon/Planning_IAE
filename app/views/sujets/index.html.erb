<div class="flex items-center justify-between border-b mt-6 mb-2 pb-4">
  <h1 class="text-3xl flex items-center gap-3">
    <span class="material-symbols-outlined text-3xl">
      docs
    </span>
    Sujets d'examens
  </h1>
</div>

<div class="bs-container mx-auto sm:px-4 max-w-full p-4 shadow">
  <%= form_tag request.path, method: :get do %>
    <div class="flex flex-wrap">

      <div class="sm:w-1/5 px-4">
        <%= label_tag :nom, "Nom" %>    
        <%= text_field_tag :nom, params[:nom], include_blank:true, onchange:'this.form.submit()', class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="sm:w-1/5 px-4">
        <%= label_tag :workflow_state, "État" %>
        <%= select_tag :workflow_state, 
                            options_for_select(Sujet.workflow_spec.states.keys.to_a, params[:workflow_state]), 
                            include_blank: true,
                            class: 'select select-bordered select-sm w-full', 
                            onchange: 'this.form.submit()' %>
      </div>

      <div class="sm:w-1/5 px-4 mt-2">
        <br>
        <%= check_box_tag :archive, nil, params[:archive], onchange: 'this.form.submit()' %>
        <%= label_tag :archive, "Inclure les archivés ?" %>
      </div>
      
    </div>
  <% end %>
</div>

    <div class="overflow-x-auto">
      <table class="table mb-4">
        <thead class="bg-slate-100 border">
          <tr>
            <% if policy(Dossier).action? %>
              <th>
                <span class="flex" data-action="click->action#click">
                  <input type="checkbox" data-checkbox-select-all-target="checkboxAll" data-action-target="source">
                </span>
              </th>
            <% end %>
            <th><%= sort_link 'dossiers.période', 'Période' %></th>
            <th><%= sort_link 'intervenants.nom', 'Intervenant' %></th>
            <th><%= sort_link 'dossiers.workflow_state', 'État' %></th>
            <th>Statut Mail</th>
            <th>État Mail</th>
            <th><%= sort_link 'dossiers.created_at', 'Création' %></th>
            <th><%= sort_link 'dossiers.updated_at', 'MÀJ' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <%= render @dossiers %>
        </tbody>
      </table>
    </div>