
<div class="border-b mt-6 mb-2 pb-4">
    <div class="float-right">
        <%= link_to user_path(current_user), class: 'btn btn-ghost' do %>
            <%= fa_icon 'list-alt', text: ' Retour' %>
        <% end %>
    </div>
	<h1 class="text-3xl"><%= fa_icon 'key' %> Activation de la double authentification</h1>
</div>

<div>
    <% totp_uri = current_user.otp_provisioning_uri(current_user.email, issuer: "IAE-Planning") %>
    <p>Veuillez scanner ce QRCode avec l'application mobile Google Autenticator :</p>
    <%= raw RQRCode::QRCode.new(totp_uri).as_svg(module_size: 3) %>
    <br>
    
    <p>Veuillez saisir le code de v√©rification sur l'application :</p>
    <%= form_with url: enable_otp_do_users_path, method: :post do |f| %>
        <%= f.text_field :otp_attempt, class: 'input input-bordered input-sm', required: true %>
        <%= f.submit "Valider", class: "btn" %>
    <% end %>
</div>
